rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função para verificar se o usuário é o dono do documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Coleção de usuários
    match /users/{userId} {
      // Qualquer usuário autenticado pode ler perfis públicos
      allow read: if isAuthenticated();
      // Apenas o próprio usuário pode criar/atualizar seu perfil
      allow create, update: if isOwner(userId);
      allow delete: if false; // Nunca permitir deleção
    }
    
    // Coleção de cursos
    match /courses/{courseId} {
      // Qualquer pessoa pode ler cursos
      allow read: if true;
      // Apenas usuários autenticados podem criar/atualizar (admin verificado no código)
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated();
      
      // Subcoleção de avaliações
      match /ratings/{ratingId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(ratingId);
      }
    }
    
    // Coleção de inscrições
    match /enrollments/{enrollmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if false;
    }
    
    // Coleção de progresso do usuário
    match /userProgress/{progressId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if false;
    }
    
    // Coleção de solicitações de certificados
    match /certificateRequests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Coleção de professores/formadores
    match /professores/{professorId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    
    // Coleção de jornadas
    match /journeys/{journeyId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated();
    }
    
    // Coleção de configurações de pagamento (não usada mais, mas manter para compatibilidade)
    match /paymentSettings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
